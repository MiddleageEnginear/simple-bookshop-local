<a href="/add-book" class="button">Yeni Kitap Ekle</a>

{{#if books}}
    <table>
        <thead>
            <tr>
                <th>Başlık</th>
                <th>Yazar</th>
                <th>Yıl</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            {{#each books}}
            <tr>
                <td>{{title}}</td>
                <td>{{author}}</td>
                <td>{{year}}</td>
                <td>
                    <a href="/edit-book/{{id}}" class="button edit">Düzenle</a>
                    <form action="/delete-book/{{id}}" method="POST" style="display:inline;">
                        <button type="submit" class="button delete" onclick="return confirm('Bu kitabı silmek istediğinizden emin misiniz?');">Sil</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>Henüz hiç kitap eklenmemiş. <a href="/add-book">İlk kitabı eklemek için tıklayın.</a></p>
{{/if}}